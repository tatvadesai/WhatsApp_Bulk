# WhatsApp Mass Messenger - Environment Template

# Google Sheets Integration
GOOGLE_SHEETS_ID="your_sheet_id_here"
GOOGLE_SHEETS_RANGE="Sheet1!A:D"
GOOGLE_APPLICATION_CREDENTIALS="./service-account.json"

# Message Configuration
MESSAGE_TEMPLATE=default

# Event Details
EVENT_DATE=1st January
EVENT_VENUE="Sample Venue Name"
EVENT_NAME="Sample Event Name"
EVENT_TIME="7:00 PM"

# Contact Filtering
ALLOWED_CITIES="City1,City2"
BLOCKED_NUMBERS="+1234567890"

# Sending Configuration
MESSAGE_DELAY=5000
BATCH_SIZE=10
BATCH_DELAY=30000
MAX_MESSAGES_PER_MINUTE=30
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=3000

# Application Settings
DEBUG_MODE=false
LOG_LEVEL=info
# Options: debug, info, success, warn, error 